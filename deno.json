{
  "importMap": "import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "tasks": {
    "lume": "DENO_DIR=_vendor echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
    "clean": "rm -rf ./_site",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "lint": {
    "files": {
      "exclude": [
        "./_site"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any",
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        "./_site",
        "./src/posts"
      ]
    }
  }
}
